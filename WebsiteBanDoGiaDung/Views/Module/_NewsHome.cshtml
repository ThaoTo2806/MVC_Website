
<div class="container-91 title">Có gì mới cho ngày hôm nay ?</div>
<div class="container wrap clearfix">
    <div class="row">
        <div class="col-md-12 col-lg-6 bu-left">
            <iframe width="100%" height="380" src="https://www.youtube.com/embed/t3jMD8y8-z4" frameborder="0"  allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="col-md-12 col-lg-6 bu-right">
            @foreach (var c in Model)
            {
                <div class="wrap-card clearfix">
                    <a href="@c.Slug">
                        <div class="card-img">
                            <img src="/Public/images/post/@c.Image" alt="@c.Title" width="130">
                        </div>
                        <div class="card-body">
                            <p class="card-text d-inline-block text-truncate text-dark text-wrap">
                                @c.Title
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div> 
    </div>
</div>
